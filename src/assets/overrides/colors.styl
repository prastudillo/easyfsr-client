.background {
  &.primary {
    background-color: $primary;
    
    &.overlay {
      background-color: rgba($primary, 0.8);
    }
  }
  
  &.secondary {
    background-color: $secondary;
  }
  
  &.clear {
    background-color: #fff;
  }
}

.text {
  &.primary {
    color: $primary;
  }
  
  &.secondary {
    color: $secondary;
  }
  
  &.meta {
    color: lighten($secondary, 40%);
  }
  
  &.normal {
    color: lighten(#000, 30%);
  }
}

.dark-mode {
  background-color: $primary;
  
  * {
    color: lighten($primary, 90%);
  }
}