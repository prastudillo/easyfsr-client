.fsrExport {
  display: inline-block;
  max-width: 100%;
  overflow: scroll;
  font-family: "Arial", sans-serif;

  .document {
    background-color: white;
    font-size: 10pt;

    width: 8.5in;
    height: 11in;
    padding: 0.75in 0.7in;
    position: relative;
    
    * {
      color: black !important;
    }
    
    .bold { font-weight: bold; }
    .center {
      text-align: center;
      
      & > * { margin: auto; }
    }
    header { font-size: 11pt; }
    label { margin-right: 0.5em; }
  }
  
  .form-float {
    position: absolute;
    top: 0.75in;
    left: 0.7in;
    font-size: 9pt;
  }
  
  .grid {
    display: flex;
    width: 100%;
  }
  
  .flex-mid {
    display: flex;
  }
  
  .field-line {
    text-align: center;
    flex: 1;
    
    &:after {
      display: block;
      border-top: 1px solid black;
      padding: 0 3em;
      
      content: attr(data-label);
    }
  }
  
  .margin1 {
    &.left { margin-left: 0.5em; }
    &.right { margin-right: 0.5em; }
  }
}